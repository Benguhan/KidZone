<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayingActivityTR">

    <Button
        android:id="@+id/DaysGButtonTR"
        android:layout_width="353dp"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        android:text="Günler"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SeasonsGButtonTR" />

    <Button
        android:id="@+id/SeasonsGButtonTR"
        android:layout_width="353dp"
        android:layout_height="160dp"
        android:layout_marginTop="32dp"
        android:text="Mevsimler"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/DaysGButtonTR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/DirectionsGButtonTR"
        android:layout_width="353dp"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        android:text="Yönler"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MonthsGButtonTR" />

    <Button
        android:id="@+id/MonthsGButtonTR"
        android:layout_width="353dp"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        android:text="Aylar"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DaysGButtonTR" />

</androidx.constraintlayout.widget.ConstraintLayout>